<div class="container">
	<%= form_with model: @project, url: projects_path, local: true do |form| %>
	  

	  <% if @project.errors.any? %>
	    <div id="error_explanation">
	      <h2>
	        <%= pluralize(@project.errors.count, "error") %> prohibited
	        this project from being saved:
	      </h2>
	      <ul>
	        <% @project.errors.full_messages.each do |msg| %>
	          <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>

		<p>
		    <%= form.label :project_name %><br>
		    <%= form.text_field :title %>
		</p>

		<p>
		    <%= form.label :project_summary %><br>
		    <%= form.text_area :text %>
		</p>

		<p>
		    <%= form.label :project_start_date %><br>
		    <%= form.date_field :sdate %><br>
		</p>

		<p>
		    <%= form.label :project_end_date %><br>
		    <%= form.date_field :edate %><br>
		</p>

		<p>
		    <%= form.submit %>
		</p>
	<% end %>
</div>